{% extends 'base.html.twig' %}
{% block title %}
    Knp Taste - {{ course.name }}
{% endblock %}
{% block content %}
    <h1 class="text-center">Course - {{ course.name }}</h1>
    <div class="container">
        <div class="row">
            <div class="col-12">
                {% if display %}
                    <iframe
                            width="1182" height="665" src="{{ course.youtubeLink }}"
                            frameborder="0" allow="autoplay; encrypted-media" allowfullscreen>
                    </iframe>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}